@model AppLunch.Models.RegistrationModel

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

<hr />

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { autocomplete="off" }))
{
    @Html.ValidationSummary("", new { @class = "text-danger" });
    @Html.AntiForgeryToken();

    <div style="margin-bottom: 15px">
        <div class="form-group">
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email, new { autocomplete = "off", @class = "form-control" })
            <small id="emailHelp" class="form-text text-muted">This will also be your account user name.</small>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.FirstName)
            @Html.TextBoxFor(x => x.FirstName, new { autocomplete = "off", @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.LastName)
            @Html.TextBoxFor(x => x.LastName, new { autocomplete = "off", @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Password)
            @Html.PasswordFor(x => x.Password, new { autocomplete = "off", @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.ConfirmPassword)
            @Html.PasswordFor(x => x.ConfirmPassword, new { autocomplete="off", @class = "form-control" })
        </div>
    </div>

    <div>
        <input class="btn btn-default" type="submit" value="Register" />
    </div>
}